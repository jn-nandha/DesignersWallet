<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="col-md-3 side-left">
				<div class="current-user">
					<%= current_user.name%>
				</div>
				<div class="recipients-search">
					<%= render partial: 'chats/search',locals: { allusers: @all_users } %>
				</div>
				<div class="recipients" id="recp">
					<%= render partial: 'chats/recipients', locals: { allusers: @all_users, notifiedusers: @notified_users, followedusers: @followed_users} %>
				</div>
			</div>
			<div class="col-md-6 side-center">
				<div class="messages" id="recp-msgs">
					<%= render partial: 'chats/messages', locals: { msgs: @msgs, recipient: @user} %>
				</div>
				<div class="write" id="form">
					<%= render partial: 'chats/form', locals: { recp: @user} %>	
				</div>
			</div>
			<div class="col-md-3 side-right">
				<div id="designs" class="designs">
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function(argument) {
		$('#msg').scrollTop($('#msg').prop("scrollHeight"));
	});
</script>
