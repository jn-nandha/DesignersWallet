if($("#btn<%=@did%>").val() == 'Add to favourites')
  $("#btn<%=@did%>").attr('value','Remove from favourites');
else if($("#btn<%=@did%>").val() == 'Remove from favourites')
  $("#btn<%=@did%>").attr('value','Add to favourites');
else if($("#btn<%=@did%>").val() == 'Remove')
	$("#did<%=@did%>").remove();