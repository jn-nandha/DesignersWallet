<div class="container">
<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<% @designs.each do |design| %>
		<div class= 'col-sm-3 img-responsive' id= "did<%=design.id%>">
			<div class="ibox">
				<div class="ibox-content product-box">
					<div class="product-imitation image-padding-5px">
						<%= link_to(image_tag("#{design.image_url}", size: "230x200"), home_path({design_id: design})) %>
					</div>
					<div class="product-desc">
						<div class="m-t text-righ">
							<%= button_to 'Remove',favourites_change_fav_path(design_id: design), remote: true , method: "post" , id: "btn#{design.id}",class: "btn btn-xs btn-outline btn-danger fa" %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>
</div>