<% if images.count != 0 %>
  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
      <% images.each do |design| %>
        <div class="col-md-4"%>
          <div class="ibox">
            <div class="ibox-content product-box">
              <div class="product-imitation image-padding-5px" >
                <%= link_to(image_tag("#{design.image_url}", size: "230x200"), home_path({design_id: design})) %>
              </div>
              <div class="product-desc">
                <div class="m-t text-righ">
                  <% if current_user.favourited_designs.include?(design) %>
                      <%= link_to "Remove from favourites", favourites_change_fav_path(design_id: design),remote: true , method: "post" , id: "btn#{design.id}" , class: "btn btn-xs btn-default" %>
                  <% else %>
                      <%= link_to "Add to favourites", favourites_change_fav_path(design_id: design), remote: true , method: "post" , id: "btn#{design.id}",class: "btn btn-xs btn-default" %>
                  <% end %>
                  <% if  design.feedbacks.where(user_id: current_user.id ).count == 0 %>
                    <%= link_to feedbacks_like_path(design_id: design), remote: true , method: "post" , id: "likebtn#{design.id}",class: "btn btn-xs btn-default" do%>
                        <i class="fa fa-thumbs-o-up"> Like </i>
                    <% end %>
                  <% else %>
                    <% if  design.feedbacks.where(user_id: current_user.id , like: true).count == 0 %>
                      <%= link_to feedbacks_like_path(design_id: design), remote: true,method: "post" , id: "likebtn#{design.id}",class: "btn btn-xs btn-default" do %>
                      <i class="fa fa-thumbs-o-up"> Like </i>
                    <% end%>
                    <% else %>
                      <%= link_to feedbacks_like_path(design_id: design), remote: true,method: "post" , id: "likebtn#{design.id}",class: "btn btn-xs btn-default" do %>
                      <i class="fa fa-thumbs-o-down"> Dislike </i>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div>
    <p>Post are not available.it may happen in case if you dont follow someone.</p>
  </div>
<% end %>