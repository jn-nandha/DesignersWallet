<% if images.count != 0 %>
 <div class="row">
    <div class="col-lg-12">
    	<div class="ibox float-e-margins">
       		<div>
                <div class="carousel-inner">
                    <div class="item gallery active">
					<% images.each do |design| %>
						<div class= 'col-sm-4 img-responsive product-box img-space'>
						<%= link_to(image_tag("#{design.image_url}", size: "200x200"), home_path({design_id: design})) %> 
						<div class="btn-group">
						<% if  design.favourites.where(user_id: current_user.id ).count == 0 %>
						<%= button_to "Add to favourites", favourites_change_fav_path(design_id: design),remote: true , method: "post" , id: "btn#{design.id}" , class: "btn btn-w-m btn-default btn-space" %>
						<% else %>
						<%= button_to "Remove from favourites", favourites_change_fav_path(design_id: design), remote: true , method: "post" , id: "btn#{design.id}",class: "btn btn-w-m btn-default btn-space" %>
						<% end %>
						<% if  design.feedbacks.where(user_id: current_user.id ).count == 0 %>
						<%= button_to "Like", feedbacks_like_path(design_id: design), remote: true , method: "post" , id: "likebtn#{design.id}",class: "btn btn-w-m btn-default" %>
						<% else %>
							<% if  design.feedbacks.where(user_id: current_user.id , like: true).count == 0 %>
							<%= button_to "Like", feedbacks_like_path(design_id: design), remote: true,method: "post" , id: "likebtn#{design.id}",class: "btn btn-w-m btn-default" %>
							<% else %>
								<%= button_to "Dislike",feedbacks_like_path(design_id: design), remote: true,method: "post" , id: "likebtn#{design.id}",class: "btn btn-w-m btn-default"%>
							<% end %>
						<% end %>
						</div>
						</div>
					<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
 </div>
 <% else %>
 <div>
 	<p>Post are not available.it may happen in case if you dont follow someone.</p>
 	</div>
<% end %>
