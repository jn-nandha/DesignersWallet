 <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button id="cls2" type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Report</h4>
      </div>
      <div class="modal-body">
        <div>
         <%= form_tag(feedbacks_complain_path(design_id: @design.id),method: "post", remote: true) do %>
         <% if @complain.present? %>
           <% if @complain.report.present? %>
             <%= text_area_tag "feedback[complain]", @complain.report ,id:"reportarea" ,style: "width:70%" %>
           <% else %>
              <%= text_area_tag "feedback[complain]", nil ,id:"reportarea" ,style: "width:70%" %>
           <% end %>
         <%else%>
          <%= text_area_tag "feedback[complain]", nil ,id:"reportarea" ,style: "width:70%"%>
         <% end %>
         <%= submit_tag "Submit" %>
         <% end %>
       </div>
     </div>
     <div class="modal-footer">
     </div>
   </div>
 </div>