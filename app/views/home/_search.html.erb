<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.min.js"></script>
<style>
	.design-categories{width:100%!important}
</style>
<div>
	 <div class= "container">
    <%= form_tag search_home_index_path, remote: true, class: "form-inline" do %>
    <div class= "form-group" style="width: 80% ">
    <select  multiple="multiple" data-placeholder="Select Option" class="select2 design-categories" width="100%">
      <% @cat.each do |cat| %>  
      <option><%= cat.cat_name %></option>
      <% end %>
    </select></div>
    <div class= "form-group">
    <%= hidden_field_tag "categories" %>
    <%= submit_tag "search", class: "btn btn-default", id: "cat_search" %></div>
    <% end %>
  </div>
  <br>	
</div>
<script>
  $("#cat_search").click(function(){
    cat = $('.design-categories').select2('val');
    $("#categories").val(cat);
  });
</script>