<div >
	
	<h2>Filter by Categories: </h2>
	<div >
		<%= form_tag home_search_path, remote: true do %>	
			<div>
           		<% @cat.each do |cat| %>
                <div>
                <%= check_box_tag "categories[]",  cat.id %>
