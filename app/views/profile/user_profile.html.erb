<% if @user == current_user %>
  <div class="container">
    <h3 class="p font-bold">
      <%= @user.name %>
    </h3>
    <div class="row">
	    <div class="col-md-3">
	      <div class="ibox float-e-margins">
	        <div class="ibox-title">
	          <h3 class="col-sm-8">
              <%= link_to followings_path do%>
              followings  :
              <% end %>
            </h3>
            <h4 class="col-sm-3">
              <%= link_to followings_path do%>
              <%= @user_following_count %>
              <% end %>
            </h4>   
	        </div>
        </div>
			</div>
		  <div class="col-md-3">
		    <div class="ibox float-e-margins">
		      <div class="ibox-title">
		        <h3 class="col-sm-8">
              <%= link_to followers_path do %>
              followers  :
              <% end %>
            </h3>
            <h4 class="col-sm-3">
              <%= link_to followers_path do %>
              <%= @user_follower_count %>
              <% end %>
            </h4>
		      </div>
		    </div>
		  </div>
    </div>
    <div class="ibox">
      <%= link_to new_design_path, method: "get" ,class: "btn btn-outline btn-success tooltips" , title: '', data: { toggle: 'tooltip', placement: 'bottom', original_title: 'Explore Users'} do %>
        <i class="fa fa-upload"></i><span class="bold"> Upload</span>
      <% end %>
      <%= link_to favourite_images_path, method: "get" , class: 'btn btn-outline btn-primary' do %>
        <i class="fa fa-star"></i><span class="bold"> Favourite List</span>
      <% end %>
      <%= link_to  profile_blockeduser_list_path , class: 'btn btn-outline btn-warning' do %>
        <i class="fa fa-block"></i><span class="bold">Blocked Users List</span>
      <% end %>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
            <h5>Designs</h5>
          </div>
          <% if @designs.count != 0 %>
            <div class="ibox-content">
              <div class="carousel-inner">
                <div class="item gallery active">
                  <%= render partial: 'profile/userdesigns' %>                
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
	</div>
<% else %>
	<div class="container">                                               
  	<h3 class="p font-bold">
      <%= @user.name %>
    </h3>
    <div class="row">
    	<div class="col-md-3">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
            <h3>followings</h3>
          </div>
          <div class="ibox-content">
            <h4 class="no-margins">
              <%= @user_following_count %></h4>
          </div>
        </div>
  	  </div>
    	<div class="col-md-3">
        <div class="ibox float-e-margins">
        	<div class="ibox-title">
            <h3>followers</h3>
          </div>
          <div class="ibox-content">
            <h4 class="no-margins">
              <%= @user_follower_count %></h4>
          </div>
        </div>
    	</div>
    </div>
    <div class="row ">
      <div class="col-lg-12">
        <div class="ibox float-e-margins">
          <div class="ibox-title ">
            <h5>Designs</h5>
          </div>
          <% if @designs.count != 0 %>
            <div class="ibox-content">
              <div class="carousel-inner">
                <div class="item gallery active">
                  <%= render partial: 'profile/userdesigns' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
       </div>
    </div>
	</div>
<% end %>