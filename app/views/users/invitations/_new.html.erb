<div class="tab-content">
	<div id="tab-1" class="tab-pane active">
		<div class="panel-body">
			<div class="ibox float-e-margins">
				<div class="ibox-title ">

					<div align="center" class="input-group input-control">
					<h2><%= t "devise.invitations.new.header" %></h2>
						</div>
						<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
						<%= devise_error_messages! %>

						<% resource.class.invite_key_fields.each do |field| -%>
						<br />
						<div class="input-control ">
							<span><i class="glyphicon"></i>
								<p align="left">Email:</p>
								<%= f.text_field :email,required: true, placeholder: "Email Adddress..."  ,class: 'form-control' %></p><br><br><br>
							</div>
							<% end -%>

							<p><%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-primary' %></p>
						</span>
						<% end %>

					</div>
					</div>
				</div>
			</div>   
		</div>

